# ══════════════════════════════════════════════════════════════
#  EARLY TOKEN SIGNAL DETECTOR — Configuration
# ══════════════════════════════════════════════════════════════

# ── Blockchain RPC ──────────────────────────────────────────
# WebSocket endpoint (REQUIRED). Get from Alchemy or QuickNode.
# Must support eth_subscribe for log subscriptions.
RPC_WSS=wss://base-mainnet.g.alchemy.com/v2/YOUR_KEY_HERE
RPC_HTTP=https://mainnet.base.org

# ── Telegram ────────────────────────────────────────────────
# Get API_ID + API_HASH from https://my.telegram.org
# Required for live mode. Leave empty for dry-run.
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
BASED_BOT_USERNAME=BasedBot
TELEGRAM_SESSION_NAME=signal_session

# ── Signal Thresholds ─────────────────────────────────────
# Token must pass ALL conditions to trigger a signal:
MAX_TOKEN_AGE_SECONDS=180     # Max 3 minutes old
MAX_MCAP_USD=30000            # Max $30k market cap
MIN_LIQUIDITY_USD=3000        # Min $3k pool liquidity
MIN_BUYS=2                    # Min 2 buy transactions
MIN_LARGEST_BUY_PCT=10        # Largest buy >= 10% of liquidity
MAX_SIGNALS_PER_HOUR=5        # Rate limit signals/hour

# ── Anti-Spam ─────────────────────────────────────────────
MAX_DEPLOYER_TOKENS_24H=2         # Max tokens per deployer in 24h

# Latency cutoff (0=disabled). If signal latency (pool creation → signal) exceeds this, skip it.
MAX_SIGNAL_LATENCY_SECONDS=0
# ── Mode ──────────────────────────────────────────────────
DRY_RUN=true                  # true = log signals, don't send to Telegram
LOG_LEVEL=INFO                # DEBUG for verbose output

# ── Solana (optional) ────────────────────────────────────
# Set SOL_ENABLED=true to activate the Solana pipeline.
# IMPORTANT: public endpoint is unreliable for WebSocket subscriptions.
# Get a free Helius key at https://www.helius.dev (100k credits/day).
SOL_ENABLED=false
SOL_RPC_WSS=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY_HERE
SOL_RPC_HTTP=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY_HERE
SOL_MAX_TOKEN_AGE_SECONDS=120   # Tighter than EVM (120s vs 180s)
SOL_MIN_LIQUIDITY_SOL=10        # Skip pools with < 10 SOL liquidity
